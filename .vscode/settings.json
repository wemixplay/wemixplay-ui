{
    "stylelint.validate": [
      "css",
      "scss",
      ".module.scss"
    ],
    "files.exclude": {
      "**/.classpath": true,
      "**/.project": true,
      "**/.settings": true,
      "**/.factorypath": true,
      // "node_modules": true
    },
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": "explicit",
      "source.fixAll.eslint": "explicit",
      "editor.formatOnSave": "explicit",
    },
    "stylelint.enable": true,
    "[css]": {
      "editor.defaultFormatter": "stylelint.vscode-stylelint"
    },
    "[scss]": {
      "editor.defaultFormatter": "stylelint.vscode-stylelint"
    },
    "editor.tabSize": 2,
    "editor.formatOnSave": false,
    "editor.codeActions.source.organizeImports": {
      "kind": "source.organizeImports",
      "order": [
          "module",
          "absolute",
          "relative"
      ]
  },
  "cSpell.words": [
    "accor",
    "bedge",
    "saperator",
    "Selectbox",
    "svgs",
    "xlarge",
    "xsmall"
  ]
  }